<%= form_for @courier, :html => { :class => 'form-horizontal' } do |f| %>

  <%= f.fields_for :client do |cl| %>
    <% render "/shared/client_fields", f: cl %>
  <% end %>
  <h3> Address </h3>
  <div id="address">
  <%= f.fields_for :address do |addr| %>
    <% render "/shared/address_fields", :f => addr %>
  <% end %>
  </div>


  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                couriers_path, :class => 'btn' %>
  </div>
<% end %>
