<%= simple_form_for @order_status, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.error_notification %>
  
  <%= f.association :order, label_method: :number, value_method: :id, input_html: { class: 'input-xlarge' } %>
  <%= f.association :courier, label_method: :full_name, value_method: :id, input_html: { class: 'input-xlarge' }  %>
  <%= f.input :date_planned, as: :string, input_html: { class: 'input-xlarge' }  %>
  <%= f.input :comment, input_html: { class: 'input-xlarge' }  %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                order_statuses_path, :class => 'btn' %>
  </div>
<% end %>
