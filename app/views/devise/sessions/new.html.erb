<div class="container">
    
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), :html=> { class: 'form-signin' }) do |f| %>
  <h2 class="form-signin-heading"><%= t '.sign_in_message' %></h2>
    <%= bootstrap_flash %>
    <%= f.input :email, required: false, autofocus: true, class: "input-block-level" %>
    <%= f.input :password, required: false, class: "input-block-level" %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    <%= f.button :submit, t('sign_in'), class: "btn btn-large btn-primary" %>
<% end %>

</div>
