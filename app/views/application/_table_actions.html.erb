<% unless local_assigns.has_key?(:without_show) %>
  <%= link_to model, class: 'btn btn-mini' do %>
    <i class="icon-eye-open"></i> <%= t('.show', :default => t("helpers.links.show")) %>
  <% end %>
<% end %>

<%= link_to edit_polymorphic_path(model), class: 'btn btn-mini' do %>
  <i class="icon-pencil icon-white"></i> <%= t('.edit', :default => t("helpers.links.edit")) %>
<% end %>

<%= link_to model, method: :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, class: 'btn btn-mini btn-danger' do %>
  <i class="icon-remove icon-white"></i> <%= t('.destroy', :default => t("helpers.links.destroy")) %>
<% end %> 
