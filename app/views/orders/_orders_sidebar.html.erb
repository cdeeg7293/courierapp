<%= form_tag orders_path, method: 'get', :class => 'form-inline' do %>  
  <div class="control-group">
    <%= label_tag t 'orders.sidebar.issue_date_start' %>
    <div class="controls">
      <%= text_field_tag :issue_date_start, params[:issue_date_start] %>
    </div>
  </div>
  
  <div class="control-group">
    <%= label_tag t 'orders.sidebar.issue_date_end' %>
    <div class="controls">
      <%= text_field_tag :issue_date_end, params[:issue_date_end] %>
    </div>
  </div>
  
  <div class="control-group">
    <%= label_tag t 'orders.sidebar.delivery_date_start' %>
    <div class="controls">
      <%= text_field_tag :delivery_date_start, params[:delivery_date_start] %>
    </div>
  </div>
  
  <div class="control-group">
    <%= label_tag t 'orders.sidebar.delivery_date_end' %>
    <div class="controls">
      <%= text_field_tag :delivery_date_end, params[:delivery_date_end] %>
    </div>
  </div>
  
  <%= submit_tag t('filter'), class: 'btn btn-normal' %>
  <%= link_to t('clear'), orders_path, class: 'btn btn-normal' %>
<% end %>

