<%= simple_form_for @contact_type, :html => { :class => 'form-horizontal' } do |f| %>

  <%= f.input :type_name %>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                contact_types_path, :class => 'btn' %>
  </div>
<% end %>
