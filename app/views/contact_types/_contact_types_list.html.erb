<%- model_class = ContactType 
    contact_types = model
-%>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:type_name) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% contact_types.each do |contact_type| %>
      <tr>
        <td><%= contact_type.type_name %></td>
        <td><%= l contact_type.created_at, format: :long %></td>
        <td>
          <%= render "table_actions", model: contact_type, without_show: true %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_contact_type_path,
            :class => 'btn btn-primary' %>
 
