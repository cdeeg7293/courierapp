<h1>OrderRouting#index</h1>
<p>Find me in app/views/order_routing/index.html.erb</p>

<%= @best_route.to_s %>
<script src="http://api-maps.yandex.ru/2.1/?lang=ru_RU&load=package.full" type="text/javascript"></script>

<div id="map" style="width: inherit; height: 400px"></div>

<script type="text/javascript">
    ymaps.ready(init);
    var myMap;
    
    function init(){ 
    ymaps.geocode("Донецк").then(function (res) {
      var myMap = new ymaps.Map("map", {
	      center: res.geoObjects.get(0).geometry.getCoordinates(),
	      zoom: 11
	  });

      ymaps.route(<%= @best_route %>).then(function (route) {
	  myMap.geoObjects.add(route);
      }, function (error) {
	  alert('Возникла ошибка: ' + error.message);
      });
    });
}
</script> 


